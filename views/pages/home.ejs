<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../components/head') %>
</head>

<body style="<%='--body-color:'+data.bodycolor;%>">

    <%- include('../components/loader') %>

    <div class="preload">

        <%- include('../components/navigation') %>

        <main class="main">
            <section class="section container">
                <article class="section__content">
                    <h1 style="<%='--heading-color:'+data.headingcolor;%>" class="section__heading">
                        <%=data.firstheading%></h1>
                    <p style="<%='--para-color:'+data.paragraphcolor;%>" class="section__caption">
                        <%=data.firstparagraph%></p>
                    <a style="<%='--btn-color:'+data.ctaprimarylabelcolor+';'+'--btn-bgcolor:'+data.ctaprimarycolor%>"
                        href="#" class="btn btn--primary">Start now</a>
                </article>
                <figure class="section__figure">
                    <img src="<%=data.firstimage%>" alt="">
                </figure>
            </section>
            <section class=" sequel section">
                <article class="section__content container">
                    <h2 style="<%='--heading-color:'+data.headingcolor;%>"
                        class="section__heading section__heading--withbar"><%=data.secondheading%></h2>
                    <p style="<%='--para-color:'+data.paragraphcolor;%>" class="section__caption">
                        <%=data.secondparagraph%></p>
                </article>
            </section>
            <section class="section container">
                <figure class="section__figure">
                    <img src="<%=data.thirdimage%>" alt="">
                </figure>
                <article class="section__content">
                    <h2 style="<%='--heading-color:'+data.headingcolor;%>"
                        class="section__heading section__heading--withbar"><%=data.thirdheading%></h2>
                    <p style="<%='--para-color:'+data.paragraphcolor;%>" class="section__caption">
                        <%=data.thirdparagraph%></p>
                </article>
            </section>
            <section class="section container">
                <article class="section__content">
                    <h2 style="<%='--heading-color:'+data.headingcolor;%>"
                        class="section__heading section__heading--withbar"><%=data.fourthheading%></h2>
                    <section class="section container">
                        <article class="testimonials">
                            <% data.testimonials.forEach(function(testimonial,index){%>
                            <div class="<%=index==1?'testimonial testimonial--active':'testimonial'%>">
                                <h3 style="<%='--heading-color:'+data.headingcolor;%>" class="testimonial__heading">
                                    &ldquo;<%=testimonial.heading%>!&rdquo;</h3>
                                <ul class="rating__list">
                                    <li class="rating__item"><img src="/assets/images/star.svg" alt=""></li>
                                    <li class="rating__item"><img src="/assets/images/star.svg" alt=""></li>
                                    <li class="rating__item"><img src="/assets/images/star.svg" alt=""></li>
                                    <li class="rating__item"><img src="/assets/images/star.svg" alt=""></li>
                                    <li class="rating__item"><img src="/assets/images/star.svg" alt=""></li>
                                </ul>
                                <p style="<%='--para-color:'+data.paragraphcolor;%>" class="section__caption">
                                    <%=testimonial.caption%></p>
                            </div>
                            <%});%>
                            <div class="testimonial__controls">
                                <a style="<%='--btn-color:'+data.ctasecondarylabelcolor+';'+'--btn-bgcolor:'+data.ctasecondarycolor%>"
                                    href="#" class="prev btn btn-ghost">Previous</a>
                                <a style="<%='--btn-color:'+data.ctaprimarylabelcolor+';'+'--btn-bgcolor:'+data.ctaprimarycolor%>"
                                    href="#" class="next btn btn--primary">Next</a>
                            </div>
                        </article>
                        <figure class="section__figure">
                            <img src="<%=data.fourthimage%>" alt="">
                        </figure>
                    </section>
                </article>
            </section>
            <section class="section">
                <article class="section__content section--last">
                    <h2 style="<%='--heading-color:'+data.headingcolor;%>" class="section__heading center">
                        <%=data.fifthheading%></h2>
                    <p style="<%='--para-color:'+data.paragraphcolor;%>" class="section__caption">
                        <%=data.fifthparagraph%></p>
                    <a style="<%='--btn-color:'+data.ctaprimarylabelcolor+';'+'--btn-bgcolor:'+data.ctaprimarycolor%>"
                        href="#" class="btn btn--primary">Start now</a>
                </article>
            </section>
        </main>

        <%- include('../components/footer') %>
    </div>

    <script src="/scripts/main.js"></script>

</body>

</html>